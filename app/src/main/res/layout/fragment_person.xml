<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_F5F6FB">
    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/shape_gradient_h_39_4a"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.hongyuan.fitness.custom_view.StatusBarHeightView
                android:id="@+id/barHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.hongyuan.fitness.custom_view.TitleView
                    android:id="@+id/myTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:text_color="@color/color_FFFFFF"
                    app:center_text="我的"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/pushMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/person_push_mark"/>
                    <ImageView
                        android:id="@+id/messageMark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:src="@mipmap/person_message_mark"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F5F6FB">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.hongyuan.fitness.ui.main.main_person.PersonHeaderView
                    android:id="@+id/headView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.hongyuan.fitness.ui.main.main_person.PersonContentView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_radius6_ffffff"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    app:person_show_type="0"/>


                <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_radius6_ffffff"
                    app:leftDrawable="@mipmap/person_point_mark"
                    app:leftText="我的积分"
                    app:itemType="point"/>

                <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_radius6_ffffff"
                    app:leftDrawable="@mipmap/person_collect_mark"
                    app:leftText="我的收藏"
                    app:itemType="collect"/>

                <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_radius6_ffffff"
                    app:leftDrawable="@mipmap/person_order_mark"
                    app:leftText="我的订单"
                    app:itemType="order"/>

                <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_radius6_ffffff"
                    app:leftDrawable="@mipmap/person_share_mark"
                    app:leftText="邀请分享"
                    app:itemType="share"/>

                <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_radius6_ffffff"
                    app:leftDrawable="@mipmap/person_setting_mark"
                    app:leftText="设置"
                    app:itemType="setting"/>

                <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/shape_radius6_ffffff"
                    app:leftDrawable="@mipmap/person_aboutus_mark"
                    app:leftText="关于我们"
                    app:itemType="aboutUs"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</FrameLayout>
