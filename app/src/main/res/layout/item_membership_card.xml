<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <RelativeLayout
        android:id="@+id/cardBox"
        android:layout_width="match_parent"
        android:layout_height="173dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/cardBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="10dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/zhuanshi_card"/>
        <TextView
            android:id="@+id/cardUseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="16dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="21dp"
            android:text="2020.9.1到期"/>
        <TextView
            android:id="@+id/cardTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/color_FFFFFF"
            android:layout_above="@id/cardUseTime"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="11dp"
            android:text="钻石店通卡"/>
        <TextView
            android:id="@+id/xuKaButton"
            android:layout_width="80dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_radius24_stroke_ffffff"
            android:layout_margin="16dp"
            android:gravity="center"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_16"
            android:text="续卡"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
