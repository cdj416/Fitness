<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="68dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/theme_color1"
    android:orientation="horizontal"
    android:paddingStart="16dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/superiorHead"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:riv_corner_radius="22dp"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/default_head_img"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/superiorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color3"
            android:textSize="@dimen/sp_14"
            android:text="Jessica"/>
        <TextView
            android:id="@+id/superiorTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_12"
            android:text="188****2123"/>
    </LinearLayout>

</LinearLayout>
