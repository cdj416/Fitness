<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/color_FFFFFF"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/itemBg">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/courseImg"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:riv_corner_radius="6dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/zhengfangxing_default_img"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/courseImg"
        android:layout_marginRight="50dp"
        android:layout_marginStart="8dp">
        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FF333333"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="CrossFit 综合体能"/>
        <TextView
            android:id="@+id/coursePeople"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FF333333"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="300人参课"/>
        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FF333333"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="首玺健身爱山店"/>
    </LinearLayout>

    <TextView
        android:id="@+id/goDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:background="@drawable/shape_radius16_ef5b48"
        android:textSize="12sp"
        android:textColor="@color/color_FFFFFF"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="参加"/>
</RelativeLayout>
