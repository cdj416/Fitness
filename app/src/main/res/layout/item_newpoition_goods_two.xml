<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/goGoodTwoDetails"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal"
        android:layout_margin="6dp"
        android:background="@drawable/shape_gradient_v_ffff8041_ffff8041">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/goodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FFFFFF"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="7dp"
                android:layout_marginStart="12dp"
                android:text="商品名称商品 名称商品…"/>

            <TextView
                android:id="@+id/needPoition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_12"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="10dp"
                android:layout_alignParentBottom="true"
                android:text="1500积分"/>
        </RelativeLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/goodImg"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:riv_corner_radius="28dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center_vertical"
            android:src="@color/color_f2"/>
    </LinearLayout>
</LinearLayout>
