<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.StartPromoteViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/color_F5F6FB">
        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="174dp"
            android:orientation="vertical"
            android:background="@color/color_FFFFFF"
            android:layout_alignParentBottom="true">
            <com.hongyuan.fitness.ui.shop.smyview.ShopMainTitleView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                app:smTitleName="海报分享到"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@mipmap/wechat_payment_img"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="微信"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@mipmap/share_wxcircle"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="朋友圈"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@mipmap/share_qq"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="QQ"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="43dp"
                        android:layout_height="43dp"
                        android:src="@mipmap/share_qzone"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="8dp"
                        android:gravity="center"
                        android:text="QQ空间"/>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <com.hongyuan.fitness.custom_view.recylerbanner.BannerLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:showIndicator="false"
            app:autoPlaying="true"
            app:centerScale="1.3"
            app:blItemSpace="20"
            app:moveSpeed="1.8"/>
    </RelativeLayout>
</layout>