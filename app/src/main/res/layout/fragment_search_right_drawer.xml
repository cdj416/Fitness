<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background1"
    android:clickable="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color1"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/theme_color4"
                android:text="输入文本"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp">
                <EditText
                    android:id="@+id/startPrice"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:hint="最低价"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:inputType="numberDecimal"
                    android:textColor="@color/theme_color3"
                    android:textColorHint="@color/theme_color4"
                    android:background="@drawable/shape_radius16_fff5f5f5"/>

                <View
                    android:layout_width="18dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/theme_line1"/>
                <EditText
                    android:id="@+id/endPrice"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:hint="最高价"
                    android:gravity="center"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:inputType="numberDecimal"
                    android:textColorHint="@color/theme_color4"
                    android:background="@drawable/shape_radius16_fff5f5f5"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF999999"
                android:text="定位地址"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingStart="16dp"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/locationPro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/color_f2"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:text="浙江"/>
                <View
                    android:layout_width="1px"
                    android:layout_height="30dp"
                    android:background="@color/theme_line1"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/locationCity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@color/color_f2"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:drawableLeft="@mipmap/location_qianjishe_img"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="湖州"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:drawableLeft="@mipmap/location_qianjishe_img"
                    android:drawablePadding="2dp"
                    android:gravity="center"
                    android:text="刷新"/>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/theme_line1"/>
        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="60dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginStart="16dp"
                    android:textColor="@color/theme_color4"
                    android:text="省份"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRec"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/theme_color1"
            android:paddingEnd="16dp"
            android:gravity="right|center_vertical">
            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="5dp"
                android:paddingEnd="16dp"
                android:paddingTop="5dp"
                android:background="@drawable/shape_radius16_00000000_stroke_ef5b48"
                android:textColor="@color/color_EF5B48"
                android:textSize="12sp"
                android:text="重置"/>
            <TextView
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="16dp"
                android:paddingBottom="5dp"
                android:paddingEnd="16dp"
                android:paddingTop="5dp"
                android:background="@drawable/shape_radius16_ef5b48"
                android:textColor="@color/color_FFFFFF"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:text="确定"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_line1"
            android:layout_gravity="bottom"
            android:layout_marginBottom="54dp"/>
    </FrameLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
