<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="106dp"
    android:layout_height="106dp"
    android:layout_marginTop="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/defaultImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/theme_add_baise_img_black"/>
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/contentImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:riv_corner_radius="6dp"
        android:visibility="gone"
        android:src="@mipmap/zhengfangxing_default_img"/>
    <ImageView
        android:id="@+id/closeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/red_close_mark"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:padding="5dp"/>
    <ImageView
        android:id="@+id/playMark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@mipmap/play_baise_img"
        android:visibility="gone"/>
</RelativeLayout>
