<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.person.physical_data.add_physical.AddPhysicaldataViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/layoutMenu"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@drawable/shape_gradient_h_39_4a"
                app:tabIndicatorColor="@color/color_FFFFFF"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/color_FFFFFF"
                app:tabTextColor="#FFA0A0B2"
                app:tabIndicatorFullWidth="false"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_FFFFFF"/>
        </LinearLayout>
    </FrameLayout>

</layout>
