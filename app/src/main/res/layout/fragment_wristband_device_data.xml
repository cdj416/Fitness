<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.hongyuan.fitness.custom_view.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_F5F6FB"
            android:orientation="vertical"
            android:paddingBottom="12dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:background="@color/color_FFFFFF"
                android:paddingEnd="16dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/wPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_12"
                        android:text="已连接 90%"/>
                    <RelativeLayout
                        android:layout_width="16dp"
                        android:layout_height="9dp"
                        android:layout_marginStart="4dp"
                        android:background="@mipmap/battery_mark"
                        android:padding="4px">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="3dp"
                            android:background="@color/black"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="174dp"
                android:background="@color/color_FFFFFF">

                <RelativeLayout
                    android:id="@+id/goRunBox"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <View
                        android:id="@+id/orangeDotView"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_oval_fff49473"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_14"
                        android:textColor="@color/color_FF333333"
                        android:layout_toEndOf="@id/orangeDotView"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:text="运动"/>

                    <TextView
                        android:id="@+id/todayDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_12"
                        android:drawableRight="@mipmap/right_huise_img"
                        android:gravity="center"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:drawablePadding="2dp"
                        android:text="2019.11.12"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_FF333333"
                        android:text="今日消耗"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/kcalNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF333333"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="@dimen/sp_12"
                            android:text="Kcal"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true">
                    <LinearLayout
                        android:id="@+id/goStepBox"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_FF999999"
                            android:text="今日步数"/>
                        <TextView
                            android:id="@+id/todayStepNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF333333"
                            android:text="0"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_EEEEEE"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_FF999999"
                            android:text="今日运动时长"/>
                        <TextView
                            android:id="@+id/exerciseDuration"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF333333"
                            android:text="00:00:00"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_EEEEEE"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_FF999999"
                            android:text="最高心率"/>
                        <TextView
                            android:id="@+id/heartRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textStyle="bold"
                            android:textColor="@color/color_FF333333"
                            android:text="0"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/heartRateBox"
                android:layout_width="match_parent"
                android:layout_height="258dp"
                android:background="@color/color_FFFFFF"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp">
                    <View
                        android:id="@+id/hertDotview"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_gradient_oval_ffe83f94_fff54e5e"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_toEndOf="@id/hertDotview"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:text="心率(BPM)"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="34dp"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/heart_rate_mark"/>
                    <TextView
                        android:id="@+id/heartRateNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FF333333"
                        android:layout_marginStart="4dp"
                        android:textStyle="bold"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_FF333333"
                        android:text="次/分"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/lineChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/goSleepBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/color_FFFFFF"
                android:layout_marginTop="12dp"
                android:paddingBottom="16dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:paddingStart="16dp">
                    <View
                        android:id="@+id/sleepDotview"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/shape_oval_ff8f8bff"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_toEndOf="@id/sleepDotview"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="4dp"
                        android:text="睡眠"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="31dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:gravity="center_vertical"
                        android:drawablePadding="6dp"
                        android:drawableLeft="@mipmap/sleeping_time_mark"
                        android:text="睡眠时间"/>
                    <TextView
                        android:id="@+id/allSleepH"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FF333333"
                        android:layout_marginStart="12dp"
                        android:textStyle="bold"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_FF333333"
                        android:textStyle="bold"
                        android:text="小时"/>
                    <TextView
                        android:id="@+id/allSleepS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FF333333"
                        android:textStyle="bold"
                        android:text="0"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/color_FF333333"
                        android:textStyle="bold"
                        android:text="分钟"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF999999"
                    android:textSize="@dimen/sp_12"
                    android:gravity="center_vertical"
                    android:drawablePadding="6dp"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="24dp"
                    android:drawableLeft="@mipmap/sleeping_time_mark"
                    android:text="睡眠质量"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="13dp"
                    android:gravity="center_vertical"
                    android:paddingStart="33dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#FF806DEF"
                            android:text="●"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginStart="7dp"
                            android:textColor="@color/color_FF333333"
                            android:text="深睡"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="9dp"
                            android:layout_marginEnd="32dp">
                            <TextView
                                android:id="@+id/sumDeepSleepText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FF333333"
                                android:text="0小时0分钟"/>
                            <com.hongyuan.fitness.custom_view.BarPercentView
                                android:id="@+id/barDeepSleep"
                                android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_height="4dp"
                                android:value="80"
                                app:barProgressColor="@color/color_FF806DEF"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#FFA6A3FF"
                            android:text="●"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginStart="7dp"
                            android:textColor="@color/color_FF333333"
                            android:text="浅睡"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="9dp"
                            android:layout_marginEnd="32dp">
                            <TextView
                                android:id="@+id/sumLightSleepText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FF333333"
                                android:text="0小时0分钟"/>
                            <com.hongyuan.fitness.custom_view.BarPercentView
                                android:id="@+id/barLightSleep"
                                android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_height="4dp"
                                android:value="80"
                                app:barProgressColor="@color/color_FFA6A3FF"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#FF34CBD0"
                            android:text="●"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_14"
                            android:layout_marginStart="7dp"
                            android:textColor="@color/color_FF333333"
                            android:text="清醒"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="9dp"
                            android:layout_marginEnd="32dp">
                            <TextView
                                android:id="@+id/sumSoberText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FF333333"
                                android:text="0小时0分钟"/>
                            <com.hongyuan.fitness.custom_view.BarPercentView
                                android:id="@+id/barSober"
                                android:layout_width="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_height="4dp"
                                android:value="80"
                                app:barProgressColor="@color/color_FF34CBD0"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.hongyuan.fitness.custom_view.StickyScrollView>

</LinearLayout>
