<?xml version="1.0" encoding="utf-8"?>
<com.hongyuan.fitness.custom_view.StickyScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/nScroll">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp"
        android:orientation="vertical"
        android:background="@color/theme_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="340dp">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="256dp"
                app:indicator_drawable_selected="@drawable/shape_select_dot"/>
            <LinearLayout
                android:id="@+id/titleTopViw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="sticky">
                <com.hongyuan.fitness.custom_view.StatusBarHeightView
                    android:id="@+id/barHeight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.hongyuan.fitness.custom_view.TitleView
                    android:id="@+id/myTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:line_show="false"/>
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="6dp"
                app:cardBackgroundColor="#000000"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">
                <com.hongyuan.fitness.custom_view.HomeColumItemView
                    android:id="@+id/homeColum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"/>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/gymImg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/changguan_img"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/gym1Box"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:id="@+id/gymImg1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_jiansheng_mark"/>
                    <TextView
                        android:id="@+id/gymText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="健身"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gym2Box"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:id="@+id/gymImg2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_youyong_mark"/>
                    <TextView
                        android:id="@+id/gymText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="游泳"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/gym3Box"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:id="@+id/gymImg3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_lanqiu_mark"/>
                    <TextView
                        android:id="@+id/gymText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="篮球"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/gym4Box"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:id="@+id/gymImg4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_zhuqiu_mark"/>
                    <TextView
                        android:id="@+id/gymText4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="足球"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/goClassPage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="96dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/kecheng_img"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/goClassBox1"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_sijiaoke_mark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="私教课"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/goClassBox2"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_peixun_mark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="培训"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/goClassBox3"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_tuanke_mark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="团课"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/goClassBox4"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/theme_jiaolian_mark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:layout_marginStart="9dp"
                        android:text="教练"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/aboutSportsImg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="42dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/yueyundong_img"/>

            <LinearLayout
                android:id="@+id/faqiBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/theme_faqiyundong_mark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:layout_marginStart="9dp"
                    android:text="发起运动"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/canjiaBox"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:background="@drawable/theme_shape_radius6_ffffff_stroke_eeeeee">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/theme_canjia_yundong_mark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:layout_marginStart="9dp"
                    android:text="参加运动"/>
            </LinearLayout>
        </LinearLayout>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/storeItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:vthourth_type="store"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/yueYunDong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:vthourth_type="yueyundong"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/jianZhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            app:vthourth_type="jianzhi"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/LiLiang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone"
            app:vthourth_type="liliang"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/groupCours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:vthourth_type="groupCourse"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/PeiXun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:vthourth_type="peixun"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/goods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:vthourth_type="goods"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:visibility="gone"
            app:vthourth_type="topic"/>

        <com.hongyuan.fitness.ui.main.main_home.recommend.vthour.V4HomeRecyclerItemView
            android:id="@+id/finds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:vthourth_type="find"
            android:paddingStart="10dp"
            android:visibility="gone"
            android:paddingEnd="10dp"/>
    </LinearLayout>

</com.hongyuan.fitness.custom_view.StickyScrollView>
