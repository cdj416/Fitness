<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/theme_color1">

    <TextView
        android:id="@+id/titleName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/theme_color3"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="姓名"/>

    <TextView
        android:id="@+id/useValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="80dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <EditText
            android:id="@+id/edText"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@color/theme_color1"
            android:gravity="right|center_vertical"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/theme_color3"
            android:textColorHint="@color/theme_color9"
            android:inputType="phone"
            android:visibility="gone"
            android:hint="请输入客户姓名"/>

        <TextView
            android:id="@+id/selText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF333333"
            android:textSize="@dimen/sp_14"
            android:gravity="center"
            android:visibility="gone"
            android:drawableRight="@mipmap/theme_right_mark"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="请选择"/>

        <Switch
            android:id="@+id/twSwitch"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:track="@drawable/selector_switch_alarm_clock"
            android:thumb="@drawable/selector_switch_white_circle"
            android:visibility="gone"
            android:layout_marginEnd="16dp"/>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_line1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
