<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.ChangeAddressViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/theme_color1"
                android:layout_marginTop="12dp"
                android:textSize="14sp"
                android:textColor="@color/theme_color3"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:textColorHint="@color/theme_color4"
                android:hint="请输入收货人名"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/theme_line1"/>
            <EditText
                android:id="@+id/telNum"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/theme_color1"
                android:textSize="14sp"
                android:textColor="@color/theme_color3"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:textColorHint="@color/theme_color4"
                android:hint="请输入手机号码"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/theme_line1"/>
            <com.hongyuan.fitness.ui.shop.smyview.ScheckInView
                android:id="@+id/selectAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:sciType="select"
                app:sciEtsHintText="请选择所在区域"
                app:sciEtsTitleName="地址"/>
            <EditText
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="116dp"
                android:background="@color/theme_color1"
                android:textSize="14sp"
                android:textColor="@color/theme_color3"
                android:textColorHint="@color/theme_color4"
                android:padding="16dp"
                android:gravity="top"
                android:hint="请输入详细地址：如道路、门牌号、小区、楼栋号、单元号等"/>

            <com.hongyuan.fitness.ui.shop.smyview.ScheckInView
                android:id="@+id/isDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:sciType="tSwitch"
                app:sciEtsTitleName="设为默认地址"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteBox"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:background="@color/theme_color1">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/theme_line1"/>
            <TextView
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:textColor="@color/color_EF5B48"
                android:textSize="@dimen/sp_16"
                android:background="@drawable/shape_radius16_00000000_stroke_ef5b48"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="删除地址"/>
        </LinearLayout>
    </FrameLayout>
</layout>