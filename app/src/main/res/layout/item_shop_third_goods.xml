<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:id="@+id/jumpBox"
    android:background="@drawable/shape_radius6_ffffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/goodsImg"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:src="@color/color_f2"
        app:riv_corner_radius_top_right="6dp"
        app:riv_corner_radius_top_left="6dp"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/goodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_12"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="商品名称商品名称商品名称商品名称商品名称"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:background="@color/color_EEEEEE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FF333333"
            android:text="¥"/>
        <TextView
            android:id="@+id/goodsPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_EF5B48"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:layout_marginStart="1dp"
            android:text="2000"/>
    </LinearLayout>
</LinearLayout>
