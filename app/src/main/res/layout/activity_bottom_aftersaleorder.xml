<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.bottomviewmodel.AftersaleOrderBottomViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_EEEEEE"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_FFFFFF"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/keFu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_12"
                    android:drawableTop="@mipmap/online_service_mark"
                    android:drawablePadding="8dp"
                    android:text="联系商家"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="3.5"
                android:layout_height="wrap_content">

                <!--完成时状态显示的按钮-->
                <LinearLayout
                    android:id="@+id/compelteBox"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="查看物流"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="删除订单"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="再次购买"/>
                </LinearLayout>

                <!--待付款时状态-->
                <LinearLayout
                    android:id="@+id/waitPayBox"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/cancelOrdel"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="取消"/>
                    <TextView
                        android:id="@+id/goPay"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="3"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="付款"/>
                </LinearLayout>
                <!--代发货状态-->
                <LinearLayout
                    android:id="@+id/dDeliveryBox"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/dDelivery"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:layout_marginStart="12dp"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="提醒发货"/>
                </LinearLayout>

                <!--待收货状态-->
                <LinearLayout
                    android:id="@+id/shippedBox"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/lateDelivery"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="延长收货"/>
                    <TextView
                        android:id="@+id/goLookLogistics"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="查看物流"/>
                    <TextView
                        android:id="@+id/confirmReceipt"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="确认收货"/>
                </LinearLayout>

                <!--待评价-->
                <LinearLayout
                    android:id="@+id/beEvaluatedBox"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/goLogistics"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="查看物流"/>
                    <TextView
                        android:id="@+id/goAfterSales"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="再次购买"/>
                    <TextView
                        android:id="@+id/goEvaluation"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="评价"/>
                </LinearLayout>
                <!--自提完成-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="删除订单"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="再次购买"/>
                </LinearLayout>
                <!--自提评价-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical|right">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_EF5B48"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="再次购买"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="评价"/>
                </LinearLayout>

                <!--自提收货-->
                <LinearLayout
                    android:id="@+id/selfMentionBox"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:gravity="center_vertical|right">

                    <TextView
                        android:id="@+id/selfReceipt"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FFFFFF"
                        android:background="@drawable/shape_gradient_v_radiu5_login"
                        android:text="确认收货"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

</layout>
