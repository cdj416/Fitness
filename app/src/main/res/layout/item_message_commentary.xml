<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:id="@+id/topHeight"
        android:layout_width="match_parent"
        android:layout_height="12dp"/>
    <RelativeLayout
        android:id="@+id/goDetail"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/theme_color1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="44dp"
            android:layout_height="44dp"
            app:riv_corner_radius="22dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@color/color_f2"/>
        <View
            android:id="@+id/isRead"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:background="@drawable/shape_gradient_oval_ef8041_ef5b48"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/img"
            android:layout_marginStart="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/theme_color3"
                android:text="小A评论了你"/>
            <TextView
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color4"
                android:textSize="@dimen/sp_12"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginEnd="100dp"
                android:text="哈哈哈"/>
        </LinearLayout>
        <TextView
            android:id="@+id/timeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/theme_color4"
            android:drawableRight="@mipmap/right_huise_img"
            android:gravity="center"
            android:text="07/02 12:50"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_line1"/>
</LinearLayout>
