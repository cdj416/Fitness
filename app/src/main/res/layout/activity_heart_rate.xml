<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.only_equipment.indicator_details.wristband_heart_rate.WristbandHeartRateViewModel"/>
    </data>

    <com.hongyuan.fitness.custom_view.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="21dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="228dp"
                android:orientation="vertical"
                android:background="@color/theme_color12">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:background="@color/theme_color1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="今日心率"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/highestNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_color3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp"
                            android:text="最高"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:background="@color/theme_line1"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/lowestNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_color3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp"
                            android:text="最低"/>
                    </LinearLayout>
                    <View
                        android:layout_width="2px"
                        android:layout_height="24dp"
                        android:background="@color/theme_line1"
                        android:layout_gravity="center_vertical"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/averageNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/theme_color3"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="0"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp"
                            android:text="平均"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/theme_color1"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingBottom="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:textSize="14sp"
                    android:textColor="@color/theme_color3"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:text="运动心率"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="21dp"
                    android:paddingStart="16dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:text="共记录"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/theme_color3"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"
                        android:visibility="gone"
                        android:text="38"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="小时"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/theme_color3"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="分钟"/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="16dp">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_radius2_fff56d6d"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:text="极限运动"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_toEndOf="@id/tv1"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/color_FF999999"
                        android:layout_centerVertical="true"
                        android:text="170-200bpm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="---"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_radius2_ffffa320"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:text="无氧运动"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_toEndOf="@id/tv2"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/color_FF999999"
                        android:layout_centerVertical="true"
                        android:text="151-169bpm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="---"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_radius2_ffbddd31"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:text="有氧运动"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_toEndOf="@id/tv3"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/color_FF999999"
                        android:layout_centerVertical="true"
                        android:text="132-150bpm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="---"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_radius2_ff5ec167"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:text="脂肪燃烧"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_toEndOf="@id/tv4"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/color_FF999999"
                        android:layout_centerVertical="true"
                        android:text="113-131bpm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="---"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_radius2_ff6da5ff"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:text="热身运动"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_toEndOf="@id/tv5"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/color_FF999999"
                        android:layout_centerVertical="true"
                        android:text="95-112bpm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="---"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginTop="12dp">
                    <View
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/shape_radius2_ffcccccc"
                        android:layout_centerVertical="true"/>
                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:text="常规心率"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:layout_toEndOf="@id/tv6"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/color_FF999999"
                        android:layout_centerVertical="true"
                        android:text="35-94bpm"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color3"
                        android:textSize="@dimen/sp_12"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:text="---"/>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="190dp"
                    android:layout_marginTop="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <com.github.mikephil.charting.charts.BarChart
                        android:id="@+id/chart1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </com.hongyuan.fitness.custom_view.StickyScrollView>
</layout>
