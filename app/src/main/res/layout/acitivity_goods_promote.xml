<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.PromoteGoodsViewModel"/>
    </data>

    <com.hongyuan.fitness.custom_view.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F6FB">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/bannerCard"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                app:cardCornerRadius="6dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                android:layout_marginTop="16dp">
                <com.youth.banner.Banner
                    android:id="@+id/banner"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    android:background="@drawable/shape_radius6_ffffff"/>

            </androidx.cardview.widget.CardView>

            <com.hongyuan.fitness.ui.shop.smyview.ShopMainTitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                app:smTitleName="优质商家"/>

            <com.hongyuan.fitness.custom_view.CustomRecyclerView
                android:id="@+id/storeRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.hongyuan.fitness.ui.shop.smyview.ShopMainTitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                app:smTitleName="热门推广"/>

            <com.hongyuan.fitness.custom_view.CustomRecyclerView
                android:id="@+id/tgRec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.hongyuan.fitness.ui.shop.smyview.ShopMainTitleView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                app:smTitleName="收益排行"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRec"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </com.hongyuan.fitness.custom_view.StickyScrollView>

</layout>