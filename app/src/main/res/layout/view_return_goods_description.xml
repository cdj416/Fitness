                app:icLeftText="退款方式"
                app:icLeftColor="@color/theme_color3"
                app:icRightText="原路返回"
                app:icLine="false"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_line1"/>

