                android:layout_height="wrap_content"
                android:textColor="@color/theme_color3"
                android:textSize="@dimen/sp_14"
                android:text="因您超时未处理，本次申请关闭"/>
           <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/theme_color3"
               android:layout_marginTop="6dp"
                android:textSize="@dimen/sp_14"
