<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.mall.good_pay.GoodsPayViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_background1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/priceBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:text="¥"/>
                    <TextView
                        android:id="@+id/showPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@color/theme_color3"
                        android:text="3200"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pointBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color4"
                        android:text="+"/>
                    <TextView
                        android:id="@+id/showPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/theme_color3"
                        android:text="2000"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color4"
                        android:layout_marginLeft="5dp"
                        android:text="积分"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/theme_color3"
                    android:text="请在15分钟内完成支付"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_EF5B48"
                    android:layout_marginLeft="16dp"
                    android:text="14:58"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="11dp"
                android:background="@color/theme_line1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/theme_color7"
                android:layout_marginTop="33dp"
                android:text="选择支付方式:"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp">
                <TextView
                    android:id="@+id/lavePoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color3"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/balance_huangse_img"
                    android:text="剩余积分: 0"/>
                <ImageView
                    android:id="@+id/goldPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:src="@mipmap/pay_huise_no_select_img"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="11dp"
                android:background="@color/theme_line1"/>
            <RelativeLayout
                android:id="@+id/wechatBox"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                binding:onClickCommand="@{ViewModel.wechatPay}">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color3"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/wechat_payment_img"
                    android:text="微信支付"/>
                <ImageView
                    android:id="@+id/wechatPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/pay_chengse_select_img"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="11dp"
                android:background="@color/theme_line1"/>
            <RelativeLayout
                android:id="@+id/alipayBox"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                binding:onClickCommand="@{ViewModel.alipayPay}">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color3"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:drawableLeft="@mipmap/alipay_payment_img"
                    android:text="支付宝支付"/>
                <ImageView
                    android:id="@+id/alipayPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/pay_huise_no_select_img"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="11dp"
                android:background="@color/theme_line1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="28dp">
            <Button
                android:id="@+id/cancelPay"
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:background="@drawable/theme_shape_radius6_00000000_stroke_cccccc"
                android:textColor="@color/theme_color3"
                android:text="取消"/>
            <Button
                android:id="@+id/pay"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textColor="@color/white"
                android:layout_marginStart="12dp"
                android:gravity="center"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                android:text="确认支付"/>
        </LinearLayout>
    </RelativeLayout>
</layout>
