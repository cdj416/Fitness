<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="141dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/courseImg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:src="@mipmap/a_test2"
                app:riv_corner_radius_top_right="6dp"
                app:riv_corner_radius_bottom_right="6dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:riv_corner_radius="6dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/home_meng_ban"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="97dp">
            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/sp_16"
                android:text="急速减脂"/>
            <TextView
                android:id="@+id/userNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:layout_below="@id/courseName"
                android:layout_alignLeft="@id/courseName"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="6dp"
                android:text="已上8节/共16节"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_alignParentBottom="true"
                android:alpha="0.8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/coachName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginBottom="10dp"
                    android:text="教练：李梦雪"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone"
                    android:text="可约时间：最近 今天16:00"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/reservation"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textSize="14sp"
            android:gravity="center"
            android:background="@drawable/shape_bottom_radius6_ef5b48"
            android:text="预约"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
