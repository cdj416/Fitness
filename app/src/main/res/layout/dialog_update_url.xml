<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:paddingBottom="16dp"
        android:background="@drawable/shape_radius_top12_ffffff">
        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape_radius6_00000000_stroke_ef5b48"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:hint="请输入appUrl(☺粘贴比较快哦☺)"/>
        <EditText
            android:id="@+id/webUrl"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="16dp"
            android:background="@drawable/shape_radius6_00000000_stroke_ef5b48"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:hint="请输入webUrl(☺粘贴比较快哦☺)"/>

        <Button
            android:id="@+id/userNameSubmit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_gradient_v_radiu5_login"
            android:layout_alignParentBottom="true"
            android:text="确认切换"
            android:textColor="@color/color_FFFFFF"/>
    </LinearLayout>
</LinearLayout>
