<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="318dp"
            android:orientation="vertical"
            android:background="@drawable/shape_radius6_ffffff">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/human_face_mark"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_16"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:text="请拍照上传个人形象\n以便录入人脸识别门禁系统"/>
            <Button
                android:id="@+id/goTakePhoto"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="36dp"
                android:textColor="@color/color_FFFFFF"
                android:text="开始录入"
                android:background="@drawable/shape_gradient_v_radiu5_login"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12"
                android:text="录入后不可修改，如需修改请到门店前台"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/closeImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/close_yuanquancha_img"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"/>
    </LinearLayout>
</LinearLayout>
