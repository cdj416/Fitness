<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.bottomviewmodel.IgdBottomViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF333333"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/sp_14"
                android:drawableTop="@mipmap/person_message_mark"
                android:drawablePadding="6dp"
                android:gravity="center"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="27dp"
                android:text="咨询客服"/>
            <TextView
                android:id="@+id/goExchange"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_FFFFFF"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                android:layout_marginEnd="16dp"
                android:text="立即兑换"/>
        </LinearLayout>
    </FrameLayout>

</layout>
