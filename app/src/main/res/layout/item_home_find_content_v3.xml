<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardElevation="6dp"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:orientation="vertical"
        android:id="@+id/jumpDetails"
        android:background="@drawable/shape_radius6_ffffff">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="156dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/coverImg"
                android:layout_width="match_parent"
                android:layout_height="156dp"
                app:riv_corner_radius_top_right="6dp"
                app:riv_corner_radius_top_left="6dp"
                android:src="@mipmap/zhengfangxing_default_img"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/styleImgNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textColor="@color/white"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="12dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:background="@drawable/shape_radius16_000000"
                android:visibility="visible"
                android:alpha="0.5"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/headImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/about_class_select"
                app:riv_corner_radius="100dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:scaleType="centerCrop"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/headImg"
                android:layout_marginLeft="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/fName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FF333333"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginRight="20dp"
                    android:text="Valentina"/>
                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:text="湖州"/>
            </LinearLayout>

            <TextView
                android:id="@+id/attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:padding="5dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:drawableBottom="@mipmap/like_huise_img"
                android:gravity="center"
                android:text="11"/>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
