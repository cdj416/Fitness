<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/jumpDetails"
    android:layout_margin="6dp"
    android:background="@drawable/theme_shape_radius6_ffffff">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/coverImg"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:riv_corner_radius_top_right="6dp"
            app:riv_corner_radius_top_left="6dp"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/playMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play_baise_img"
            android:visibility="gone"
            android:layout_centerInParent="true"/>
        <TextView
            android:id="@+id/styleImgNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="12dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:background="@drawable/shape_radius16_000000"
            android:visibility="visible"
            android:alpha="0.5"/>

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FFFFFF"
            android:background="@drawable/shape_semicircle_right_6484f0"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:layout_marginTop="13dp"
            android:paddingTop="6dp"
            android:text="审核中"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:padding="8dp"
        android:paddingEnd="6dp"
        android:paddingBottom="6dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/theme_color3"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:id="@+id/circle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FF999999"
        android:textSize="@dimen/sp_12"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="8dp"
        android:text="#健身打卡#"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:background="@color/theme_color5"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/headImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/about_class_select"
            app:riv_corner_radius="100dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/fName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/theme_color3"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/headImg"
            android:maxLines="1"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="12dp"
            android:text="Valentina"/>

        <!--<LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/headImg"
            android:layout_marginLeft="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/theme_color4"
                android:text="湖州"/>
        </LinearLayout>-->

        <TextView
            android:id="@+id/attention"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="5dp"
            android:textColor="@color/theme_color4"
            android:drawableBottom="@mipmap/like_huise_img"
            android:gravity="center"
            android:drawablePadding="5dp"
            android:text="11"/>
    </RelativeLayout>
</LinearLayout>
