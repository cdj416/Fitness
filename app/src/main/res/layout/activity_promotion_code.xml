<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.person.my_promote.PromotionCodeViewModel"/>
    </data>

    <FrameLayout
        android:id="@+id/box"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/promotion_code_img"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/promotion_code_logo"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="374dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/shape_radius6_ffffff"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical"
                    android:gravity="center">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/headImg"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        app:riv_corner_radius="22dp"
                        android:src="@mipmap/default_head_img"
                        android:scaleType="centerCrop"/>
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textColor="@color/color_FF333333"
                        android:text="Jessica"
                        android:layout_marginTop="12dp"/>
                    <TextView
                        android:id="@+id/desText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:text="首玺健身会籍顾问"
                        android:layout_marginTop="4dp"/>
                    <ImageView
                        android:id="@+id/qrCodeImg"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_marginTop="24dp"
                        android:src="@mipmap/zhengfangxing_default_img"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/color_FF333333"
                            android:text="扫码加入"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_EF5B48"
                            android:textSize="@dimen/sp_16"
                            android:text="随动运动社区"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FF333333"
                        android:text=" 燃烧你的卡路里"/>
                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="@dimen/sp_12"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="推荐用户下载随动APP并购买成为会员，可获提成奖励\n 推荐越多，奖励越多"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:textColor="@color/color_FFFFFF"
                android:text="长按可保存二维码"/>
        </LinearLayout>
    </FrameLayout>
</layout>