<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="440dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/color_FF333333"
                android:gravity="center"
                android:text="预约首次上课时间"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tabRecyc"
                android:layout_width="match_parent"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:layout_height="58dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/contentRecyc"
                android:layout_width="match_parent"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:layout_height="350dp"
                android:paddingBottom="88dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/noSelcet"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginRight="12dp"
                android:gravity="center"
                android:textColor="#EF5B48"
                android:textSize="@dimen/sp_16"
                android:text="暂不选择"
                android:layout_weight="1"
                android:background="@drawable/shape_radius6_00000000_stroke_ef5b48"/>
            <TextView
                android:id="@+id/submit"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_16"
                android:text="确定"
                android:layout_weight="2"
                android:background="@drawable/shape_radius6_ef5b48"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#EEEEEE"
            android:layout_above="@id/bottomBox"/>
    </RelativeLayout>
</LinearLayout>
