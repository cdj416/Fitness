<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="146dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sd_find"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_suidong"
                android:textSize="@dimen/sp_14"
                android:text="随动社区"
                android:textColor="@color/color_FF333333"
                android:gravity="center"
                android:layout_marginStart="36dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="13dp"/>
            <TextView
                android:id="@+id/weiXin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_weixin"
                android:textSize="@dimen/sp_14"
                android:text="微信"
                android:textColor="@color/color_FF333333"
                android:gravity="center"
                android:layout_marginStart="36dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="13dp"/>
            <TextView
                android:id="@+id/wxCircle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_wxcircle"
                android:textSize="@dimen/sp_14"
                android:text="朋友圈"
                android:textColor="@color/color_FF333333"
                android:gravity="center"
                android:layout_marginStart="36dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="13dp"/>
            <TextView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_qq"
                android:textSize="@dimen/sp_14"
                android:text="QQ"
                android:textColor="@color/color_FF333333"
                android:gravity="center"
                android:layout_marginStart="36dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="13dp"/>
            <TextView
                android:id="@+id/qqZone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/share_qzone"
                android:textSize="@dimen/sp_14"
                android:text="QQ空间"
                android:textColor="@color/color_FF333333"
                android:gravity="center"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_gravity="center_vertical"
                android:drawablePadding="13dp"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>
