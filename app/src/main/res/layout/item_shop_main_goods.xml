<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="6dp"
    android:id="@+id/jumpBox"
    android:background="@drawable/shape_radius6_ffffff">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/goodsImg"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:src="@mipmap/zhengfangxing_default_img"
        app:riv_corner_radius_top_right="6dp"
        app:riv_corner_radius_top_left="6dp"
        android:scaleType="centerCrop"/>


    <TextView
        android:id="@+id/goodsName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/color_FF333333"
        android:textSize="@dimen/sp_12"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="商品名称商品名称商品名称商品名称商品名称"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:background="@color/color_EEEEEE"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="12dp">

        <LinearLayout
            android:id="@+id/pointBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/goodsPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_EF5B48"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_marginStart="1dp"
                android:text="0"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF333333"
                android:textSize="@dimen/sp_12"
                android:layout_marginStart="1dp"
                android:text="积分"/>
        </LinearLayout>

        <TextView
            android:id="@+id/addMark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FF333333"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:text="+"/>

        <LinearLayout
            android:id="@+id/priceBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF333333"
                android:text="¥"/>
            <TextView
                android:id="@+id/goodsPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_EF5B48"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold"
                android:layout_marginStart="1dp"
                android:text="0"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
