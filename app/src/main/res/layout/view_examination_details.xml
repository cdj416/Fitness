<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@color/color_FFFFFF">
    <RelativeLayout
        android:id="@+id/titleBox"
        android:layout_width="match_parent"
        android:layout_height="44dp">
        <TextView
            android:id="@+id/normTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/color_FF333333"
            android:layout_centerVertical="true"
            android:text="体重"/>
        <TextView
            android:id="@+id/normText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_FF999999"
            android:textSize="@dimen/sp_14"
            android:layout_toEndOf="@id/normTitle"
            android:layout_centerVertical="true"
            android:layout_marginStart="6dp"
            android:text="75kg"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center">
            <TextView
                android:id="@+id/levelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:textSize="10sp"
                android:background="@drawable/shape_radius16_ff1bc050"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingEnd="7dp"
                android:paddingStart="7dp"
                android:text="标准"/>
            <ImageView
                android:id="@+id/upDownImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:src="@mipmap/chevron_down_gray_mark"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_EEEEEE"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/detailBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/gradeTitleBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                android:id="@+id/gradeTitle1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF333333"
                android:gravity="center"/>
            <TextView
                android:id="@+id/gradeTitle2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF333333"
                android:gravity="center"/>
            <TextView
                android:id="@+id/gradeTitle3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF333333"
                android:gravity="center"/>
            <TextView
                android:id="@+id/gradeTitle4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF333333"
                android:gravity="center"/>
            <TextView
                android:id="@+id/gradeTitle5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF333333"
                android:gravity="center"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/gradeLineBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="2dp">
                <View
                    android:id="@+id/gradeLine1"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_left_radius16_ffffad3e"/>
                <View
                    android:id="@+id/gradeLine2"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp"
                    android:background="#FF1BC050"/>
                <View
                    android:id="@+id/gradeLine3"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:background="#FF1BC050"/>
                <View
                    android:id="@+id/gradeLine4"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="2dp"
                    android:background="#FF1BC050"/>
                <View
                    android:id="@+id/gradeLine5"
                    android:layout_width="0dp"
                    android:layout_height="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_right_radius16_ffea1e1e"/>
            </LinearLayout>
            <View
                android:id="@+id/mobileView"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/shape_oval_border_ffff5a2e"
                android:layout_marginStart="100dp"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/boundaryValueBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="6dp">
            <TextView
                android:id="@+id/firstBoundaryValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="right"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:id="@+id/secondBoundaryValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:id="@+id/firthBoundaryValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:id="@+id/fourthBoundaryValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12"/>
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

        </LinearLayout>
        <TextView
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/color_FF999999"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>

</LinearLayout>
