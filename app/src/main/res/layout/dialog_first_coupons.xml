<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="32dp"
        android:background="@drawable/shape_radius6_ffffff">
        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_dialog_coupon_bg"
            app:riv_corner_radius_top_left="6dp"
            app:riv_corner_radius_top_right="6dp"
            android:scaleType="centerCrop"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#D53723"
            android:textSize="@dimen/sp_12"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:text="可领取所在城市门店的优惠券"/>

        <TextView
            android:id="@+id/goCoupons"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_FFFFFF"
            android:gravity="center"
            android:background="@drawable/shape_radius6_ef5b48"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:text="立即体验"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/close_yuanquancha_img"/>
</LinearLayout>
