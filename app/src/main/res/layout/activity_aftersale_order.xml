<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.AftersaleOrderViwModel"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F6FB">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/color_EF5B48"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/white_wait_img"/>
                        <TextView
                            android:id="@+id/statusName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/color_FFFFFF"
                            android:layout_marginStart="16dp"
                            android:text="等待确认收货"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/logisticsBox"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:visibility="gone"
                        android:background="@color/color_FFFFFF">
                        <ImageView
                            android:id="@+id/statusImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/logistics_img"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/statusImg"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="14dp">
                            <TextView
                                android:id="@+id/deliverCompany"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_EF5B48"
                                android:textSize="@dimen/sp_16"/>
                            <TextView
                                android:id="@+id/content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:ellipsize="end"
                                android:layout_marginEnd="30dp"
                                android:maxLines="1"
                                android:textSize="@dimen/sp_14"/>
                            <TextView
                                android:id="@+id/delTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_12"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/right_huise_img"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/goAddress"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:visibility="gone"
                        android:background="@color/color_FFFFFF">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/address_top_img"
                            android:scaleType="centerCrop"/>

                        <ImageView
                            android:id="@+id/locMark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="16dp"
                            android:src="@mipmap/location_img"/>

                        <LinearLayout
                            android:id="@+id/telBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/locMark"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/receiptName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"
                                android:text=""/>
                            <TextView
                                android:id="@+id/telNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/color_FF333333"
                                android:layout_marginStart="18dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_14"
                            android:layout_below="@id/telBox"
                            android:layout_alignLeft="@id/telBox"
                            android:layout_marginEnd="16dp"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:layout_marginTop="12dp"/>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/selfMentionBox"
                        android:layout_width="match_parent"
                        android:layout_height="94dp"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:background="@color/color_FFFFFF"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16"
                        android:visibility="gone"
                        android:gravity="center_vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"
                                android:text="自提码："/>
                            <TextView
                                android:id="@+id/sCode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_EF5B48"
                                android:textSize="@dimen/sp_14"
                                android:textStyle="bold"
                                android:text=""/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="7dp"
                            android:layout_marginBottom="7dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/sName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"/>
                            <TextView
                                android:id="@+id/sTel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"
                                android:layout_marginStart="10dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"
                                android:text="自提地址："/>
                            <TextView
                                android:id="@+id/sAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"
                                android:maxLines="1"
                                android:ellipsize="end"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <com.hongyuan.fitness.custom_view.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:paddingBottom="90dp">
                <TextView
                    android:id="@+id/storeName"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/color_FF333333"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:background="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_14"
                    android:text="店铺名称店铺名称店铺名称"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/allPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="商品总价:"
                    app:icRightText="¥0"/>

                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/freight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="运费:"
                    app:icRightText="¥0.00" />

                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/coupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="店铺优惠:"
                    app:icRightText="¥0"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/payType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    android:visibility="visible"
                    app:icLeftText="支付方式:"
                    app:icRightText="--"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/needPayPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="应付款:"
                    app:icRightText="¥0"
                    app:icRightColor="@color/color_EF5B48"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:text="订单详情"/>

                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/notes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    android:layout_marginTop="8dp"
                    app:icLeftText="订单备注:"
                    app:icRightText="-"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    android:visibility="gone"
                    app:icLeftText="积分:"
                    app:icRightText="+0"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/orderNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="订单号:"
                    app:icRightText=""
                    app:icShowCopy="true"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/createTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="创建时间："
                    app:icRightText=""/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:id="@+id/payTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="付款时间:"
                    app:icRightText=""/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="106dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:textColor="@color/color_EF5B48"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="联系商家"/>
                    <TextView
                        android:layout_width="106dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:textColor="@color/color_EF5B48"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginStart="67dp"
                        android:text="客服电话"/>
                </LinearLayout>
            </LinearLayout>
        </com.hongyuan.fitness.custom_view.StickyScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
