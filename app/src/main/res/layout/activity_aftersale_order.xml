<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.AftersaleOrderViwModel"/>
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F6FB">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:elevation="0dp">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_collapseMode="parallax"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/color_EF5B48"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/walk_select_img"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:textColor="@color/color_FFFFFF"
                            android:layout_marginStart="16dp"
                            android:text="等待确认收货"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:layout_marginTop="12dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:background="@color/color_FFFFFF">
                        <ImageView
                            android:id="@+id/statusImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/heat_img"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_toEndOf="@id/statusImg"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="14dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_EF5B48"
                                android:textSize="@dimen/sp_16"
                                android:text="运输中"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/goAddress"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:layout_marginTop="12dp"
                        android:background="@color/color_FFFFFF">
                        <LinearLayout
                            android:id="@+id/telBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FF333333"
                                android:textSize="@dimen/sp_14"
                                android:text="联系人"/>
                            <TextView
                                android:id="@+id/telNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/color_FF333333"
                                android:layout_marginStart="18dp"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF333333"
                            android:textSize="@dimen/sp_14"
                            android:layout_below="@id/telBox"
                            android:layout_marginTop="12dp"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/right_huise_img"/>
                    </RelativeLayout>
                </LinearLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>


        </com.google.android.material.appbar.AppBarLayout>

        <com.hongyuan.fitness.custom_view.StickyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="12dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textColor="@color/color_FF333333"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:background="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_14"
                    android:text="店铺名称店铺名称店铺名称"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="商品总价:"
                    app:icRightText="¥2000"/>

                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="运费:"
                    app:icRightText="¥0.00" />

                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="店铺优惠:"
                    app:icRightText="¥100"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="支付方式:"
                    app:icRightText="微信支付"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="已付款:"
                    app:icRightText="¥1900"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginTop="24dp"
                    android:layout_marginStart="16dp"
                    android:text="订单详情"/>

                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    android:layout_marginTop="8dp"
                    app:icLeftText="订单备注:"
                    app:icRightText="-"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="积分:"
                    app:icRightText="+90"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="订单号:"
                    app:icRightText="sdjs21982192"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="创建时间："
                    app:icRightText="2020.3.24 14:23:12"/>
                <com.hongyuan.fitness.custom_view.ItemCloumView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_FFFFFF"
                    app:icLeftText="付款时间:"
                    app:icRightText="2020.3.24 14:23:12"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="106dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:textColor="@color/color_EF5B48"
                        android:textSize="@dimen/sp_16"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:text="联系商家"/>
                    <TextView
                        android:layout_width="106dp"
                        android:layout_height="36dp"
                        android:gravity="center"
                        android:textColor="@color/color_EF5B48"
                        android:background="@drawable/shape_radius6_border_ef5b48"
                        android:textSize="@dimen/sp_16"
                        android:layout_marginStart="67dp"
                        android:text="客服电话"/>
                </LinearLayout>
            </LinearLayout>
        </com.hongyuan.fitness.custom_view.StickyScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>
            <!--完成时状态显示的按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="查看物流"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="删除订单"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="再次购买"/>
            </LinearLayout>

            <!--待付款时状态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="取消"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="付款"/>
            </LinearLayout>
            <!--代发货状态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:layout_marginStart="12dp"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="提醒发货"/>
            </LinearLayout>

            <!--待收货状态-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="延长收货"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="查看物流"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="确认收货"/>
            </LinearLayout>

            <!--待评价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/goLogistics"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="查看物流"/>
                <TextView
                    android:id="@+id/goAfterSales"
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="再次购买"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="评价"/>
            </LinearLayout>
            <!--自提完成-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical|right">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="删除订单"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="再次购买"/>
            </LinearLayout>
            <!--自提待收货-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:gravity="center_vertical|right">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="确认收货"/>
            </LinearLayout>
            <!--自提评价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:background="@color/color_FFFFFF"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal"
                android:visibility="visible"
                android:gravity="center_vertical|right">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_EF5B48"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/shape_radius6_border_ef5b48"
                    android:text="再次购买"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FFFFFF"
                    android:background="@drawable/shape_gradient_v_radiu5_login"
                    android:text="评价"/>
            </LinearLayout>
        </LinearLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
