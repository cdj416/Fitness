<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.person.waiting_for_class.about_privite_class.privite_checkin_details.PriviteCourseCheckDetailsViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <com.hongyuan.fitness.custom_view.StickyScrollView
            android:id="@+id/mScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="100dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/headBox"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingBottom="27dp">
                    <ImageView
                        android:id="@+id/headBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@mipmap/a_test2"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:background="@color/black"
                        android:layout_alignParentBottom="true"
                        android:alpha="0.5"/>
                    <LinearLayout
                        android:id="@+id/llbox1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="16dp"
                        android:layout_marginBottom="27dp"
                        android:gravity="bottom"
                        android:layout_marginTop="7dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/participateNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_12"
                            android:text="参课18人"/>
                        <TextView
                            android:id="@+id/commentAllNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_EF5B48"
                            android:layout_marginLeft="12dp"
                            android:textSize="12sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:gravity="center"
                            android:background="@drawable/shape_radius16_00000000_stroke_ef5b48"
                            android:text="124评价>"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_above="@id/llbox1"
                        android:layout_marginLeft="16dp"
                        android:gravity="bottom"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/courseType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="24sp"
                            android:text="力量增肌"/>
                        <TextView
                            android:id="@+id/buyNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:textSize="12sp"
                            android:text="1节起售"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="27dp"
                        android:gravity="center">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/headImg"
                            android:layout_width="44dp"
                            android:layout_height="44dp"
                            app:riv_corner_radius="44dp"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/default_head_img"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/coachName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_16"
                                android:text="李梦雪"/>
                            <TextView
                                android:id="@+id/coachLev"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_12"
                                android:text="明星私教"/>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="horizontal">
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/timeImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/time_black_img"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/timeImg"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/color_FF333333"
                                android:text="已约时间"/>
                            <TextView
                                android:id="@+id/coachTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_777777"
                                android:text="最近 今日16:00"/>
                        </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:layout_width="1px"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:background="@color/color_FFD1D1D1"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1">
                        <ImageView
                            android:id="@+id/locImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/site_black_img"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/locImg"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_14"
                                android:textColor="@color/color_FF333333"
                                android:text="服务场地"/>
                            <TextView
                                android:id="@+id/courseAddress"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_777777"
                                android:text="首玺健身南街店"/>
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@color/color_FFD1D1D1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:text="课程时间"/>
                <TextView
                    android:id="@+id/courseTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_777777"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp_12"
                    android:text="60分钟/节 3-5次/周"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:text="课程内容"/>
                <TextView
                    android:id="@+id/courseContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_777777"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp_12"
                    android:text="专业教练通过分析不同学员的体脂/体型及健康状况，通过不同的方式针对身体的肌肉强化训练，使肌肉线条美化。"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:text="适合人群"/>
                <TextView
                    android:id="@+id/coursePeople"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_777777"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp_12"
                    android:text="体型瘦弱/需要快速获得强壮身材及体型的人群"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="24dp"
                    android:textSize="16sp"
                    android:visibility="gone"
                    android:text="运动建议"/>
                <TextView
                    android:id="@+id/courseSuggest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_777777"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="8dp"
                    android:textSize="@dimen/sp_12"
                    android:visibility="gone"
                    android:text="1. 根据教练安排，坚持合理运动频率 \n2. 补充足够热量/碳水化合物/蛋白质等，帮助肌肉生长，在教练 指导下完成力量训练，不要过度承重。"/>
            </LinearLayout>

        </com.hongyuan.fitness.custom_view.StickyScrollView>

        <LinearLayout
            android:id="@+id/titleBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.hongyuan.fitness.custom_view.StatusBarHeightView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"/>
            <com.hongyuan.fitness.custom_view.TitleView
                android:id="@+id/myTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_image="@mipmap/white_common"
                app:center_text="课程签到"
                app:text_color="@color/color_FFFFFF"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/white">
            <Button
                android:id="@+id/cancelReservation"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/shape_radius6_999999"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_FFFFFF"
                android:text="取消预约"/>
            <Button
                android:id="@+id/checkIn"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_weight="2"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                android:text="签到"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="84dp"
            android:background="@color/color_FFD1D1D1"/>
    </FrameLayout>
</layout>
