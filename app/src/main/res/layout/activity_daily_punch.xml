<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.person.daily_punch.DailyPunchViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/theme_background">
        <com.hongyuan.fitness.custom_view.StickyScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:background="@drawable/theme_shape_radius6_ffffff">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/dataText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textColor="@color/theme_color3"
                            android:text="2019年7月"/>
                        <TextView
                            android:id="@+id/punchNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_below="@id/dataText"
                            android:textColor="@color/color_FF999999"
                            android:text="已连续打卡1天"/>
                        <TextView
                            android:id="@+id/pointTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_FF999999"
                            android:layout_alignParentEnd="true"
                            android:text="积分"/>
                        <TextView
                            android:id="@+id/pointNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:layout_below="@id/pointTitle"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/theme_color3"
                            android:drawableLeft="@mipmap/point_small_img"
                            android:drawablePadding="5dp"
                            android:gravity="center"
                            android:text="9000"/>
                    </RelativeLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/theme_line1"
                        android:layout_marginTop="11dp"
                        android:layout_marginBottom="11dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp"
                            android:text="每日可获积分进度"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="53dp">
                            <com.hongyuan.fitness.custom_view.my_progress.BubbleProgressView
                                android:id="@+id/bubbleProgress"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginEnd="6dp"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:gravity="center">
                                <View
                                    android:layout_width="11dp"
                                    android:layout_height="11dp"
                                    android:background="@drawable/shape_radius6_border_ef5b48"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/color_FF999999"
                                    android:text="0"/>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:gravity="center">
                                <View
                                    android:layout_width="11dp"
                                    android:layout_height="11dp"
                                    android:background="@drawable/shape_oval_border_dddddd"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_12"
                                    android:textColor="@color/color_FF999999"
                                    android:text="100"/>
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:background="@drawable/theme_shape_radius6_ffffff">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="44dp"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/theme_color3"
                                android:textSize="18sp"
                                android:text="签到领积分"/>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="5dp"
                                android:gravity="center">
                                <View
                                    android:layout_width="26dp"
                                    android:layout_height="1px"
                                    android:background="@color/color_CCCCCC"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_FF999999"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:textSize="14sp"
                                    android:text="今日可领积分"/>
                                <View
                                    android:layout_width="26dp"
                                    android:layout_height="1px"
                                    android:background="@color/color_CCCCCC"/>
                            </LinearLayout>

                            <TextView
                                android:id="@+id/obtainNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textColor="@color/theme_color3"
                                android:drawableStart="@mipmap/point_medium_img"
                                android:layout_marginTop="5dp"
                                android:drawablePadding="5dp"
                                android:gravity="center"
                                android:text="10"/>
                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/punchBox"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:orientation="vertical"
                            android:background="@drawable/shape_gradient_v_radiu5_login"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/qdText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_16"
                                android:textColor="@color/color_FFFFFF"
                                android:text="立即打卡"/>
                            <TextView
                                android:id="@+id/buttonShow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FFFFFF"
                                android:text="已连续打卡2天"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/sharePush"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:elevation="6dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="14sp"
                        android:text="今日分享"
                        android:background="@mipmap/push_share_bg_img"/>
                </RelativeLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/taskRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </com.hongyuan.fitness.custom_view.StickyScrollView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:background="@drawable/only_shape_gradient_h_39_4a">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="一"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="二"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="三"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="四"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="五"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="六"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:gravity="center"
                    android:text="日"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_gradient_h_39_4a"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/openBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/punch_down_bg"/>
                <ImageView
                    android:id="@+id/openMark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/white_down_mark"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</layout>
