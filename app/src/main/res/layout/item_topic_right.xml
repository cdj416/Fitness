<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/theme_color1"
    android:id="@+id/box">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/rightTopicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/theme_color3"
            android:drawableLeft="@mipmap/topic_mark"
            android:drawablePadding="6dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="坚持运动的那些天"/>
        <TextView
            android:id="@+id/rightTopicDes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color4"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="38dp"
            android:text="1.4万人参与讨论"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/theme_line1"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
