    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/theme_color3"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/courseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color4"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/storeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color4"
            android:textSize="@dimen/sp_12"
            android:layout_marginEnd="60dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="12dp">
        <Button
            android:id="@+id/signButton"
            android:layout_width="56dp"
            android:layout_height="24dp"
            android:background="@drawable/shape_radius14_ffffffff"
            android:textColor="@color/color_EF5B48"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/signUpNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/theme_color4"
            android:layout_marginTop="6dp"/>
    </LinearLayout>
</RelativeLayout>
