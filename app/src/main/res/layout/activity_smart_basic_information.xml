<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.only_equipment.smart_basic_information.SmartBasicInformationViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="100dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_FF333333"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp"
                    android:text="选择性别"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/clickMan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_EF5B48"
                        android:textSize="@dimen/sp_14"
                        android:drawableTop="@mipmap/default_man_head_img"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:text="男"/>
                    <TextView
                        android:id="@+id/clickWoman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_14"
                        android:drawableTop="@mipmap/default_wuman_head_img"
                        android:layout_marginLeft="70dp"
                        android:gravity="center"
                        android:drawablePadding="10dp"
                        android:text="女"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_FF333333"
                    android:layout_gravity="center_horizontal"
                    android:text="年龄"/>
                <TextView
                    android:id="@+id/selectDays"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_marginStart="36dp"
                    android:layout_marginEnd="36dp"
                    android:gravity="center"
                    android:textSize="14sp"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/shape_radius24_0000000_stroke_cccccc"
                    android:text="选择日期"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/color_FF333333"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:text="身高"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/heightNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:textSize="20sp"
                        android:textColor="@color/color_EF5B48"
                        android:textStyle="bold|italic"
                        android:text="180"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="12sp"
                        android:text="cm"/>
                </LinearLayout>
                <com.hongyuan.fitness.custom_view.MyRulerView
                    android:id="@+id/heightRuler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            
            <Button
                android:id="@+id/addBoxBut"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                android:layout_centerInParent="true"
                android:text="完成"
                android:textColor="@color/color_FFFFFF"/>
        </RelativeLayout>
    </FrameLayout>

</layout>
