<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/showTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/theme_color4"
        android:text="2020.4.10"/>
    <LinearLayout
        android:id="@+id/goDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@drawable/theme_shape_radius6_ffffff">
        <TextView
            android:id="@+id/courseStartTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/theme_color4"
            android:textSize="@dimen/sp_12"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/headImg"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@color/color_f2"
                app:riv_corner_radius="22dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/headImg"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/courseName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/theme_color3"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginEnd="70dp"/>
                <TextView
                    android:id="@+id/coachName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:layout_marginTop="2dp"
                    android:textColor="@color/theme_color4"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginEnd="70dp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/rightBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:gravity="right"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/theme_color3"
                        android:text="超出预期"/>
                    <!--<RatingBar
                        android:id="@+id/myRat"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        style="@style/evaluationRatingBar"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@id/startTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:isIndicator="true"
                        android:numStars="5"
                        android:rating="5"/>-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/startTitle"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/start_select"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/start_select"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/start_select"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/start_select"/>
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/start_select"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/goAssess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FFFFFF"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:background="@drawable/shape_radius16_ef5b48"
                    android:text="评价"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
