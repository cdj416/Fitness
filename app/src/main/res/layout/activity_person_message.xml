<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.person.person_message.PersonMessageViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/theme_background">
        <com.hongyuan.fitness.custom_view.StickyScrollView
            android:id="@+id/mScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/bgImg"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:src="@mipmap/person_message_top_bg"
                        android:scaleType="centerCrop"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="198dp"
                        android:visibility="visible"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginTop="135dp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/theme_shape_radius6_ffffff">
                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/sp_16"
                            android:textColor="@color/theme_color3"
                            android:layout_marginTop="46dp"
                            android:gravity="center"
                            android:drawablePadding="5dp"
                            android:text=""/>
                        <TextView
                            android:id="@+id/userAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:text=""/>
                        <TextView
                            android:id="@+id/userSignature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="12sp"
                            android:layout_marginTop="8dp"
                            android:text=""/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:id="@+id/myGuanZhu"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/attentionNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/theme_color3"
                                    android:textStyle="bold"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/color_FF999999"
                                    android:text="关注"/>
                            </LinearLayout>
                            <View
                                android:layout_width="1px"
                                android:layout_height="48dp"
                                android:background="@color/theme_line1"
                                android:layout_gravity="center_vertical"/>
                            <LinearLayout
                                android:id="@+id/fans"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/fanNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_16"
                                    android:textColor="@color/theme_color3"
                                    android:textStyle="bold"
                                    android:text="0"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/sp_14"
                                    android:textColor="@color/color_FF999999"
                                    android:text="粉丝"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/headImg"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        app:riv_corner_radius="72dp"
                        app:riv_border_width="2dp"
                        app:riv_border_color="@color/color_FFFFFF"
                        android:src="@mipmap/default_head_img"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="112dp"
                        android:elevation="16dp"/>

                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/courseTitleBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:layout_marginBottom="10dp"
                    android:visibility="gone">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/theme_color3"
                        android:text="所授课程"/>
                    <TextView
                        android:id="@+id/moreClass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F06044"
                        android:textSize="14sp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="更多"/>
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/courseRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingBottom="24dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/theme_color7"
                        android:textSize="@dimen/sp_12"
                        android:text="动态"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_EF5B48"
                        android:textSize="@dimen/sp_12"
                        android:layout_marginLeft="5dp"
                        android:text="0"/>

                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/mRecycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"/>
                    <RelativeLayout
                        android:id="@+id/loadBox"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:visibility="visible"
                        android:layout_centerInParent="true">

                        <TextView
                            android:id="@+id/isEmpty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/promt_empty_img"
                            android:drawablePadding="10dp"
                            android:layout_centerInParent="true"
                            android:visibility="visible"
                            android:gravity="center"
                            android:text="暂无动态！"
                            android:textSize="12sp"
                            android:textColor="@color/color_FF999999" />

                        <TextView
                            android:id="@+id/isErr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawableTop="@mipmap/view_erro"
                            android:drawablePadding="@dimen/dp_5"
                            android:layout_centerInParent="true"
                            android:text="出错啦，请下拉刷新！"
                            android:visibility="gone"
                            android:gravity="center"
                            android:textSize="12sp"
                            android:textColor="@color/color_FF999999" />
                    </RelativeLayout>
                </FrameLayout>
            </LinearLayout>

        </com.hongyuan.fitness.custom_view.StickyScrollView>
        <LinearLayout
            android:id="@+id/titleBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.hongyuan.fitness.custom_view.StatusBarHeightView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"/>
            <com.hongyuan.fitness.custom_view.TitleView
                android:id="@+id/myTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:left_image="@mipmap/white_common"
                app:center_text="个人主页"
                app:text_color="@color/color_FFFFFF"
                app:right_text="编辑资料"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/theme_color1">

            <TextView
                android:id="@+id/goChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/theme_person_message_mark"
                android:textSize="14sp"
                android:textColor="@color/theme_color3"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="38dp"
                android:text="聊天"/>
            <Button
                android:id="@+id/attention"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:textSize="14sp"
                android:textColor="@color/color_FFFFFF"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical"
                android:text="关注"/>
        </LinearLayout>
        <View
            android:id="@+id/viewLine"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_line1"
            android:layout_gravity="bottom"
            android:layout_marginBottom="84dp"/>
    </FrameLayout>
</layout>
