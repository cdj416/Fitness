<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.only_equipment.indicator_details.wristband_setting.WristbandSettingViwModel"/>
    </data>

    <com.hongyuan.fitness.custom_view.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_F5F6FB">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="90dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:background="@color/color_FFFFFF">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="20sp"
                    android:text="随动手环"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:id="@+id/wPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_12"
                        android:text="已连接  90%"/>
                    <RelativeLayout
                        android:layout_width="16dp"
                        android:layout_height="9dp"
                        android:layout_marginStart="4dp"
                        android:background="@mipmap/battery_mark"
                        android:padding="4px">
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="3dp"
                            android:background="@color/black"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/goAlarmClock"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                android:layout_marginTop="12dp"
                app:showItemLine="true"
                app:leftText="闹钟"
                app:rightText="未添加"/>

            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/msgRemind"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                app:showItemLine="true"
                app:leftText="消息提醒"
                app:rightText="未开启"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="久坐提醒"/>

                <Switch
                    android:id="@+id/sitSwitch"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/selector_switch_alarm_clock"
                    android:thumb="@drawable/selector_switch_white_circle"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                android:visibility="gone">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="来电提醒"/>

                <Switch
                    android:id="@+id/telSwitch"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/selector_switch_alarm_clock"
                    android:thumb="@drawable/selector_switch_white_circle"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                android:layout_marginTop="12dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="抬腕亮屏"/>

                <Switch
                    android:id="@+id/twSwitch"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/selector_switch_alarm_clock"
                    android:thumb="@drawable/selector_switch_white_circle"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="心率检测"/>

                <Switch
                    android:id="@+id/xlSwitch"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/selector_switch_alarm_clock"
                    android:thumb="@drawable/selector_switch_white_circle"
                    android:checked="true"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>

            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                android:visibility="gone"
                app:showItemLine="true"
                app:leftText="心率区间"
                app:rightText=""/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:visibility="gone"
                android:background="@color/color_FFFFFF">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:text="摇一摇拍照"/>

                <Switch
                    android:id="@+id/takePhotoSwitch"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:track="@drawable/selector_switch_alarm_clock"
                    android:thumb="@drawable/selector_switch_white_circle"
                    android:layout_marginEnd="16dp"/>

            </RelativeLayout>
            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/goProductManual"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                android:layout_marginTop="12dp"
                app:showItemLine="true"
                app:leftText="手环操作引导"
                app:rightText=""/>
            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/goCommonProblem"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                app:showItemLine="true"
                app:leftText="常见问题"
                app:rightText=""/>
            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/fromDevice"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                app:showItemLine="true"
                app:leftText="重启设备"
                app:rightText=""/>

            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/deviceMac"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                android:layout_marginTop="12dp"
                app:showItemLine="true"
                app:leftText="MAC地址"
                app:rightText="F0:E8:B5:E1:8E:02"/>
            <com.hongyuan.fitness.custom_view.person_cloum.PersonItemCloumView
                android:id="@+id/firmwareVersion"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_FFFFFF"
                app:showItemLine="true"
                app:leftText="固件版本升级"
                app:rightText="1.4.0"/>
        </LinearLayout>

    </com.hongyuan.fitness.custom_view.StickyScrollView>
</layout>
