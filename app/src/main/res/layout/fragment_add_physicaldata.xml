<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_background">

    <com.hongyuan.fitness.custom_view.StickyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="90dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:orientation="vertical"
                android:background="@drawable/shape_gradient_h_39_4a"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:tag="sticky">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/theme_color3"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:background="@color/theme_color1"
                    android:text="体重记录"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/theme_line1"/>
            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/mRecycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/noData"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="50dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textColor="@color/color_FF999999"
                    android:gravity="center"
                    android:text="暂无记录"/>
            </RelativeLayout>

        </LinearLayout>

    </com.hongyuan.fitness.custom_view.StickyScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/theme_color1"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/theme_line1"/>
        
        <TextView
            android:id="@+id/goEdit"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:textColor="@color/color_FFFFFF"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_radius6_ef5b48"
            android:layout_centerVertical="true"
            android:text="记录体重"/>
    </RelativeLayout>

</FrameLayout>
