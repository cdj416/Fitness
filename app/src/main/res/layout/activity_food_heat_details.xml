<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.heat.heat_detail.HeatDetailViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/color_FFFFFF"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/foodImg"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    app:riv_corner_radius="6dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:src="@mipmap/a_test2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/foodImg"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp">
                    <TextView
                        android:id="@+id/foodName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/color_FF333333"
                        android:text="芝士蛋糕"/>
                    <TextView
                        android:id="@+id/foodScale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:text="198千卡/ 100克"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableTop="@mipmap/gray_collection_img"
                    android:drawablePadding="5dp"
                    android:visibility="gone"
                    android:text="收藏"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16"
                    android:text="热量"/>

                <TextView
                    android:id="@+id/qianJiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF999999"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/sp_12"
                    android:text="千焦"/>
                <TextView
                    android:id="@+id/qianKa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/qianJiao"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_EF5B48"
                    android:text="千卡"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="27dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/foodKcal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/color_FF333333"
                        android:textStyle="bold"
                        android:text="198"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:text="千卡"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:layout_marginTop="6dp"
                    android:text="每100克(可食用部分)"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/shape_radius16_f1f1f8"
                        android:text="高热量"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_12"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/shape_radius16_f1f1f8"
                        android:layout_marginLeft="12dp"
                        android:text="高脂肪"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/color_EEEEEE"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16"
                    android:text="营养元素"/>

                <TextView
                    android:id="@+id/unitNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:text="单位：每100克"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.hongyuan.fitness.custom_view.my_progress.CircleProgress
                        android:id="@+id/foodProtein"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_centerInParent="true"
                        app:antiAlias="true"
                        app:arcWidth="3dp"
                        app:bgArcColor="@color/color_EEEEEE"
                        app:bgArcWidth="3dp"
                        app:arcColors="@array/one_main_color"
                        app:startAngle="270"
                        app:sweepAngle="360"
                        app:valueSize="18sp"
                        app:valueColor="@color/color_FFFFFF"
                        app:maxValue="100"
                        app:value="12" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/proteinNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/color_FF333333"
                                android:textStyle="bold"
                                android:text="12"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FF999999"
                                android:layout_marginLeft="2dp"
                                android:text="%"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="@dimen/sp_12"
                            android:text="蛋白质"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    <com.hongyuan.fitness.custom_view.my_progress.CircleProgress
                        android:id="@+id/foodFat"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_centerInParent="true"
                        app:antiAlias="true"
                        app:arcWidth="3dp"
                        app:bgArcColor="@color/color_EEEEEE"
                        app:bgArcWidth="3dp"
                        app:arcColors="@array/one_main_color"
                        app:startAngle="270"
                        app:sweepAngle="360"
                        app:valueSize="18sp"
                        app:valueColor="@color/color_FFFFFF"
                        app:maxValue="100"
                        app:value="28" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/fatNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/color_FF333333"
                                android:textStyle="bold"
                                android:text="28"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FF999999"
                                android:layout_marginLeft="2dp"
                                android:text="%"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="@dimen/sp_12"
                            android:text="脂肪"/>
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.hongyuan.fitness.custom_view.my_progress.CircleProgress
                        android:id="@+id/foodCarbide"
                        android:layout_width="81dp"
                        android:layout_height="81dp"
                        android:layout_centerInParent="true"
                        app:antiAlias="true"
                        app:arcWidth="3dp"
                        app:bgArcColor="@color/color_EEEEEE"
                        app:bgArcWidth="3dp"
                        app:arcColors="@array/one_main_color"
                        app:startAngle="270"
                        app:sweepAngle="360"
                        app:valueSize="18sp"
                        app:valueColor="@color/color_FFFFFF"
                        app:maxValue="100"
                        app:value="60" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/carbideNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textColor="@color/color_FF333333"
                                android:textStyle="bold"
                                android:text="60"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/sp_12"
                                android:textColor="@color/color_FF999999"
                                android:layout_marginLeft="2dp"
                                android:text="%"/>
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/color_FF999999"
                            android:textSize="@dimen/sp_12"
                            android:text="碳水化物"/>
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF999999"
                android:textSize="12sp"
                android:layout_gravity="center_horizontal"
                android:drawableRight="@mipmap/right_huise_img"
                android:drawablePadding="6dp"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:visibility="gone"
                android:text="更多营养元素"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/color_EEEEEE"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16"
                    android:text="单位重量" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_FF999999"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="可食用部分"/>
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="true"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="20dp"
                android:background="@color/color_EEEEEE"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/color_FF333333"
                android:layout_marginTop="16dp"
                android:text="评价"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_14"
                android:text="高热量高脂肪食物，尽量少食"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
