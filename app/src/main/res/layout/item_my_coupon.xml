<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="132dp"
         android:orientation="vertical"
         android:id="@+id/box"
         android:background="@mipmap/orange_coupon_bg"
         android:layout_marginStart="16dp"
         android:layout_marginEnd="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/priceBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="23dp"
                android:layout_marginStart="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/cMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="24sp"
                    android:text="100"/>
            </LinearLayout>
            <TextView
                android:id="@+id/cUseText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FFFFFF"
                android:text="满500可用"
                android:layout_below="@id/priceBox"
                android:layout_alignLeft="@id/priceBox"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginEnd="24dp">
                <TextView
                    android:id="@+id/cTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FFFFFF"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:text="私教课优惠券"/>
                <TextView
                    android:id="@+id/cDes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="适用于购买私教课使用"
                    android:textColor="@color/color_FFFFFF"/>
                <TextView
                    android:id="@+id/cName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:text="适用所有首玺门店"
                    android:textColor="@color/color_FFFFFF"/>
            </LinearLayout>
        </RelativeLayout>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <TextView
                 android:id="@+id/cData"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/color_FFFFFF"
                 android:textSize="@dimen/sp_12"
                 android:layout_marginStart="24dp"
                 android:layout_centerVertical="true"
                 android:text="有效期：2019.9.19-2019.10.1"/>
             <TextView
                 android:id="@+id/goUse"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/color_EF5B48"
                 android:paddingStart="14dp"
                 android:paddingEnd="14dp"
                 android:paddingBottom="6dp"
                 android:paddingTop="6dp"
                 android:layout_alignParentEnd="true"
                 android:layout_marginEnd="24dp"
                 android:background="@drawable/shape_radius14_ffffffff"
                 android:layout_centerVertical="true"
                 android:text="去使用"/>
         </RelativeLayout>

     </LinearLayout>

</LinearLayout>
