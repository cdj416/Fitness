<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@drawable/theme_shape_radius6_ffffff"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp">

        <RelativeLayout
            android:id="@+id/goBuyBox"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="16dp"
                android:alpha="0.8"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/courseType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/shape_radius24_stroke_ffffff"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="教练：李梦雪"
                    android:textColor="@color/color_FF999999"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <TextView
                android:id="@+id/courseStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/courseName"
                android:layout_alignLeft="@id/courseName"
                android:layout_marginTop="6dp"
                android:text="已上8节/共16节"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/courseName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="急速减脂"
                android:textColor="@color/theme_color3"
                android:textSize="@dimen/sp_16" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/qdBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="right">
            <TextView
                android:id="@+id/checkIn"
                android:layout_width="74dp"
                android:layout_height="26dp"
                android:textColor="@color/white"
                android:background="@drawable/shape_radius16_ef5b48"
                android:gravity="center"
                android:textSize="14sp"
                android:text="扫码签到"/>
            <TextView
                android:id="@+id/showTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF999999"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:text="距离开课还有59分钟"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
