<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="119dp"
        android:orientation="vertical"
        android:id="@+id/box"
        android:background="@mipmap/collect_coupons">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/priceBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="23dp"
                android:layout_marginStart="24dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_EF5B48"
                    android:text="¥"/>
                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_EF5B48"
                    android:textSize="24sp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/useText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/color_FF999999"
                android:layout_below="@id/priceBox"
                android:layout_alignLeft="@id/priceBox"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_marginEnd="24dp">
                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="100dp"/>
                <TextView
                    android:id="@+id/beText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="100dp"
                    android:textColor="@color/color_FF999999"/>
                <TextView
                    android:id="@+id/beStore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginStart="100dp"
                    android:visibility="gone"
                    android:textColor="@color/color_FF999999"/>
            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/validityPeriod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FF999999"
                android:textSize="@dimen/sp_12"
                android:layout_marginStart="24dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/cReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_FFFFFF"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/shape_radius16_ef5b48"
                android:layout_centerVertical="true"
                android:textSize="@dimen/sp_12"
                android:text="立即领取"/>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
