<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.out_door.about_you.AboutYouViewModel"/>
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_FF333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="17dp"
                android:text="选择性别"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/clickMan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_EF5B48"
                    android:textSize="@dimen/sp_14"
                    android:drawableTop="@mipmap/default_man_head_img"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:text="男"/>
                <TextView
                    android:id="@+id/clickWoman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF999999"
                    android:textSize="@dimen/sp_14"
                    android:drawableTop="@mipmap/default_wuman_head_img"
                    android:layout_marginLeft="70dp"
                    android:gravity="center"
                    android:drawablePadding="10dp"
                    android:text="女"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_FF333333"
                android:layout_gravity="center_horizontal"
                android:text="年龄"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/ageNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/color_EF5B48"
                    android:textStyle="bold|italic"
                    android:text="1990"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="12sp"
                    android:text="年"/>
            </LinearLayout>
            <com.hongyuan.fitness.custom_view.MyRulerView
                android:id="@+id/ageRuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_FF333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="身高"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/heightNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/color_EF5B48"
                    android:textStyle="bold|italic"
                    android:text="180"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="12sp"
                    android:text="cm"/>
            </LinearLayout>
            <com.hongyuan.fitness.custom_view.MyRulerView
                android:id="@+id/heightRuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/color_FF333333"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="体重"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/weightNum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:textColor="@color/color_EF5B48"
                    android:textStyle="bold|italic"
                    android:text="70"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="12sp"
                    android:text="kg"/>
            </LinearLayout>
            <com.hongyuan.fitness.custom_view.MyRulerView
                android:id="@+id/bodyWeightRuler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/addBoxBut"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                android:text="完成"
                android:textColor="@color/color_FFFFFF"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
