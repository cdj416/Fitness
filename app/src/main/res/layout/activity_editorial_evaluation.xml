<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.person.waiting_evaluation.editorial_evaluation.EditorialEvaluationViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"

                android:paddingLeft="16dp"
                android:paddingRight="16dp">
                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/courseImg"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    app:riv_corner_radius="3dp"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/zhengfangxing_default_img"/>
                <TextView
                    android:id="@+id/startTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/courseImg"
                    android:layout_marginLeft="8dp"
                    android:text="描述相符"/>
                <RatingBar
                    android:id="@+id/myRat"
                    android:layout_width="wrap_content"
                    android:layout_height="18dp"
                    style="@style/evaluationRatingBar"
                    android:layout_gravity="center"
                    android:layout_toEndOf="@id/startTitle"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:numStars="5"
                    android:rating="5"/>
                <TextView
                    android:id="@+id/showText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/color_FF999999"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="超出预期"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>
            <EditText
                android:id="@+id/etContent"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:textSize="@dimen/sp_12"
                android:hint="课程满足您对期待吗？说说课程的优点和美中不足的地方吧"
                android:paddingTop="10dp"
                android:gravity="top"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@color/color_FFFFFF"/>
            <com.hongyuan.fitness.ui.find.circle.edit_post.ChooseImgOrVideoView
                android:id="@+id/imgOrVideo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                binding:onClickCommand="@{ViewModel.chooseSelect}">
                <ImageView
                    android:id="@+id/selectImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/pay_huise_no_select_img"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/color_FF333333"
                    android:layout_toEndOf="@id/selectImg"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:text="匿名"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_CCCCCC"
                    android:textSize="@dimen/sp_12"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="您的评价能帮助其他小伙伴哟"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                binding:onClickCommand="@{ViewModel.chooseImg}"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_FF333333"
                    android:textSize="@dimen/sp_14"
                    android:gravity="center"
                    android:drawableLeft="@mipmap/photo_heise_img"
                    android:drawablePadding="6dp"
                    android:text="图片"/>
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_above="@id/bottomBox"
            android:background="#EEEEEE"/>
    </RelativeLayout>

</layout>
