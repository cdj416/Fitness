<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.membership_card.card_detail.CardDetailsViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_FFFFFF">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/color_FFFFFF"
                android:paddingLeft="16dp"
                android:paddingRight="16dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:layout_marginTop="12dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/cardBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/store_dan_card"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="10dp"/>
                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="16sp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="12dp"
                        android:text="首玺健身爱山店"/>
                </RelativeLayout>
                <!--<RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="182dp"
                    android:layout_marginTop="12dp">
                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/cardBg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/monthly_card_img_bg"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="12dp"/>
                    <TextView
                        android:id="@+id/cardName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textColor="@color/color_FFFFFF"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="24dp"
                        android:text="一年卡"/>
                    <TextView
                        android:id="@+id/cardPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="32sp"
                        android:layout_below="@id/cardName"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="9dp"
                        android:text="2599"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/color_FFFFFF"
                        android:text="元"
                        android:layout_toRightOf="@id/cardPrice"
                        android:layout_alignBottom="@id/cardPrice"
                        android:layout_marginLeft="5dp"/>
                    <TextView
                        android:id="@+id/cardTypeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FFFFFF"
                        android:textSize="18sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginRight="24dp"
                        android:layout_marginBottom="20dp"
                        android:text="3店通用卡"/>
                </RelativeLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_marginTop="23dp"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_777777"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:text="有效期:"/>
                    <TextView
                        android:id="@+id/cardUseTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:text="1年有效期"/>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_777777"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:text="数量:"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/subNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/sub_chengse_img"
                            binding:onClickCommand="@{ViewModel.subNum}"/>

                        <TextView
                            android:id="@+id/cardNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/color_FF333333"
                            android:layout_marginLeft="37dp"
                            android:layout_marginRight="37dp"
                            android:textSize="@dimen/sp_14"/>
                        <ImageView
                            android:id="@+id/addNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/add_chengse_img"
                            binding:onClickCommand="@{ViewModel.addNum}"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/color_FF333333"
                            android:layout_marginLeft="13dp"
                            android:text="张"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/color_FF333333"
                        android:text="适用门店"/>
                    <TextView
                        android:id="@+id/cardUseStore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_FF999999"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginTop="12dp"
                        android:text="首玺健身南街店 /首玺健身爱山店 /首玺健身红丰店"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/color_EEEEEE"
                    android:layout_marginTop="14dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_16"
                    android:textColor="@color/color_FF333333"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"
                    android:text="会员特权"/>

                <com.hongyuan.fitness.custom_view.NestedRecyclerView
                    android:id="@+id/nestRec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/bottomBox"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawablePadding="3dp"
                        android:textColor="@color/color_FF333333"
                        android:textSize="@dimen/sp_14"
                        android:text="总计 ¥"/>
                    <TextView
                        android:id="@+id/allPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawablePadding="3dp"
                        android:textColor="@color/color_FF333333"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"
                        android:text="3200"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/payButton"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:background="@drawable/shape_gradient_v_radiu5_login"
                binding:onClickCommand="@{ViewModel.goPay}"
                android:text="去支付"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_gravity="bottom"
            android:layout_marginBottom="84dp"
            android:background="@color/color_FFD1D1D1"/>
    </FrameLayout>

</layout>
