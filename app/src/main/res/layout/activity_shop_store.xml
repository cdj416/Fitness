<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:binding="http://schemas.android.com/tools">
    <data>
        <variable
            name="ViewModel"
            type="com.hongyuan.fitness.ui.shop.sviewmodel.SstoreViewModel"/>
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_FFFFFF"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            app:elevation="0dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_collapseMode="parallax">
                <ImageView
                    android:id="@+id/bgImg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@color/color_EF5B48"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black"
                    android:alpha="0.3"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_collapseMode="pin">
                        <com.hongyuan.fitness.custom_view.StatusBarHeightView
                            android:id="@+id/barHeight"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="visible"
                            android:background="@color/transparent"/>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp">

                            <ImageView
                                android:id="@+id/mMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/white_message_mark"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"/>

                            <LinearLayout
                                android:id="@+id/searchBox"
                                android:layout_width="match_parent"
                                android:layout_height="36dp"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:paddingEnd="5dp"
                                android:layout_toLeftOf="@id/mMessage"
                                android:gravity="center_vertical"
                                android:background="@drawable/shape_radius6_ffffff">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="9dp"
                                    android:src="@mipmap/search_huise_mark"/>
                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="34dp"
                                    android:textColor="@color/color_FF999999"
                                    android:background="@color/color_FFFFFF"
                                    android:textSize="@dimen/sp_14"
                                    android:layout_marginStart="7dp"
                                    android:hint="搜索"/>
                            </LinearLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="68dp"
                        android:layout_marginTop="45dp"
                        android:paddingStart="@dimen/dp_16"
                        android:paddingEnd="@dimen/dp_16">
                        <com.makeramen.roundedimageview.RoundedImageView
                            android:id="@+id/storeImg"
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_centerVertical="true"
                            android:src="@color/color_F5F6FB"
                            android:scaleType="centerCrop"
                            app:riv_corner_radius="4dp"/>
                        <LinearLayout
                            android:layout_toEndOf="@id/storeImg"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_centerVertical="true"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/shopName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/color_FFFFFF"
                                android:textSize="@dimen/sp_14"
                                android:text="店铺名称店铺名称"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">
                                <RatingBar
                                    android:id="@+id/myRat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="12dp"
                                    style="@style/evaluationRatingBar"
                                    android:layout_gravity="center"
                                    android:layout_toEndOf="@id/startTitle"
                                    android:layout_centerVertical="true"
                                    android:isIndicator="true"
                                    android:numStars="5"
                                    android:rating="5"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_FFFFFF"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:text="|"/>
                                <TextView
                                    android:id="@+id/collectionNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/color_FFFFFF"
                                    android:textSize="@dimen/sp_12"
                                    android:text="1.2万人收藏"/>
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/collectStore"
                            android:layout_width="55dp"
                            android:layout_height="24dp"
                            android:textSize="@dimen/sp_12"
                            android:textColor="@color/color_FFFFFF"
                            android:gravity="center"
                            android:layout_centerVertical="true"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="10dp"
                            android:text="收藏"
                            android:background="@drawable/shape_radius16_border_ffffff"/>
                    </RelativeLayout>

                </LinearLayout>
            </FrameLayout>
        </com.google.android.material.appbar.CollapsingToolbarLayout>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/layoutMenu"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginEnd="10dp"
                app:tabTextColor="@color/color_FF333333"
                app:tabIndicatorColor="@color/color_EF5B48"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/color_EF5B48"
                android:layout_marginBottom="10dp"
                app:tabIndicatorFullWidth="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_EEEEEE"/>
    </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/mViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
