<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:orientation="horizontal"
    android:layout_marginTop="12dp"
    android:background="@drawable/theme_shape_radius6_ffffff"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:id="@+id/jumpBox">
    <RelativeLayout
        android:layout_width="116dp"
        android:layout_height="116dp">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/storeImg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:riv_corner_radius="6dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/fang_default"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/storeMark"
                android:layout_width="67dp"
                android:layout_height="24dp"/>
            <TextView
                android:id="@+id/storeName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="首玺健身南街店"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/theme_color3"
                android:ellipsize="end"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:lines="1"/>
        </LinearLayout>
        <TextView
            android:id="@+id/businessHours"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_marginTop="6dp"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/theme_color8"
            android:background="@drawable/theme_shape_radius18_e8e8f4"
            android:gravity="center"
            android:text="9:00-22:00"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/cardPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/theme_color3"
                android:text="会籍卡199起"/>
            <LinearLayout
                android:id="@+id/juli_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:src="@mipmap/location_img"/>
                <TextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/theme_color4"
                    android:textSize="@dimen/sp_14"
                    android:text="1.1km"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
